{
  "name": "@stylelint/remark-preset",
  "version": "3.0.0",
  "description": "stylelint org's shareable preset for remark",
  "keywords": [
    "remark",
    "remarkpreset"
  ],
  "repository": "stylelint/remark-preset",
  "license": "MIT",
  "author": "stylelint",
  "type": "module",
  "exports": "./index.js",
  "files": [
    ".remarkrc.js",
    "index.js"
  ],
  "scripts": {
    "format": "prettier . --write",
    "lint": "npm-run-all --parallel lint:*",
    "lint:formatting": "prettier . --check --ignore-path .gitignore",
    "lint:js": "eslint . --ignore-path .gitignore",
    "lint:md": "remark . --quiet --frail --ignore-path .gitignore",
    "prepare": "husky install",
    "release": "np",
    "test": "npm run lint"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,json,md,yml}": "prettier --write"
  },
  "prettier": "@stylelint/prettier-config",
  "eslintConfig": {
    "settings": {
      "jest": {
        "version": 26
      }
    },
    "extends": "stylelint"
  },
  "dependencies": {
    "remark-frontmatter": "^4.0.1",
    "remark-preset-lint-recommended": "^6.1.2",
    "remark-preset-prettier": "^1.0.0",
    "remark-validate-links": "^11.0.2"
  },
  "devDependencies": {
    "@stylelint/prettier-config": "^2.0.0",
    "eslint": "^8.21.0",
    "eslint-config-stylelint": "^15.1.0",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.1",
    "np": "^7.6.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "remark-cli": "^10.0.1"
  },
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
