{
  "name": "@stylelint/remark-preset",
  "version": "2.0.0",
  "description": "stylelint org's shareable preset for remark",
  "keywords": [
    "remark",
    "remarkpreset"
  ],
  "repository": "stylelint/remark-preset",
  "license": "MIT",
  "author": "stylelint",
  "type": "module",
  "main": "index.js",
  "files": [
    ".remarkrc.js"
  ],
  "scripts": {
    "format": "prettier . --write",
    "lint": "npm-run-all --parallel lint:*",
    "lint:formatting": "prettier . --check --ignore-path .gitignore",
    "lint:js": "eslint . --ignore-path .gitignore",
    "lint:md": "remark . --quiet --frail --ignore-path .gitignore",
    "release": "np",
    "test": "npm run lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,md,yml}": "prettier --write"
  },
  "prettier": "@stylelint/prettier-config",
  "eslintConfig": {
    "settings": {
      "jest": {
        "version": 26
      }
    },
    "extends": "stylelint"
  },
  "dependencies": {
    "remark-frontmatter": "^4.0.0",
    "remark-preset-lint-recommended": "^6.0.0",
    "remark-preset-prettier": "^0.5.1",
    "remark-validate-links": "^11.0.0"
  },
  "devDependencies": {
    "@stylelint/prettier-config": "^2.0.0",
    "eslint": "^7.19.0",
    "eslint-config-stylelint": "github:stylelint/eslint-config-stylelint#esm",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "np": "^7.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "remark-cli": "^10.0.0"
  },
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
