{
  "name": "@stylelint/remark-preset",
  "version": "5.1.1",
  "description": "stylelint org's shareable preset for remark",
  "keywords": [
    "remark",
    "remarkpreset"
  ],
  "repository": "stylelint/remark-preset",
  "funding": [
    {
      "type": "opencollective",
      "url": "https://opencollective.com/stylelint"
    },
    {
      "type": "github",
      "url": "https://github.com/sponsors/stylelint"
    }
  ],
  "license": "MIT",
  "author": "stylelint",
  "type": "module",
  "exports": "./index.js",
  "files": [
    ".remarkrc.js",
    "index.js"
  ],
  "scripts": {
    "format": "prettier . --write",
    "lint": "npm-run-all --parallel lint:*",
    "lint:formatting": "prettier . --check --ignore-path .gitignore",
    "lint:js": "eslint . --ignore-path .gitignore",
    "lint:md": "remark . --quiet --frail --ignore-path .gitignore",
    "prepare": "husky",
    "release": "np --no-release-draft",
    "test": "npm run lint"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,json,md,yml}": "prettier --write"
  },
  "prettier": "@stylelint/prettier-config",
  "eslintConfig": {
    "extends": "stylelint"
  },
  "dependencies": {
    "remark-frontmatter": "^5.0.0",
    "remark-preset-lint-recommended": "^7.0.0",
    "remark-preset-prettier": "^2.0.1",
    "remark-validate-links": "^13.0.2"
  },
  "devDependencies": {
    "@stylelint/prettier-config": "^3.0.0",
    "eslint": "^8.57.0",
    "eslint-config-stylelint": "^22.0.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "np": "^10.0.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "remark-cli": "^12.0.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
